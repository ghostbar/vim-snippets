snippet     elementSupport
abbr        fn elementSupportAttribute(..
options     head
  function elementSupportAttribute (${1:element}, ${2:attribute}) {
    var test = document.createElement($1);
    if ($2 in test)
      return true;
    else
      return false;
  }

snippet     inputSupport
abbr        inputSupportType(...
options     head
  function inputSupportsType (test) {
    var input = document.createElement('input');
    input.setAttribute('type', test);
    if (input.type == 'text')
      return false;
    else
      return true;
  }
